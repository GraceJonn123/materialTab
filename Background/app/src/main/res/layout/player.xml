<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jijjy.grace.background.Sec">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttona"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="79dp"
        android:onClick="playAudio"
        android:text="Play"
        android:backgroundTint="#000"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonb"
        android:onClick="stopAudio"
        android:text="Stop"
        android:backgroundTint="#000"
        android:textColor="#fff"
        android:layout_alignTop="@+id/buttona"
        android:layout_toRightOf="@+id/laster"
        android:layout_toEndOf="@+id/laster" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/laster"
        android:backgroundTint="#000000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/buttona"
        android:layout_toEndOf="@+id/buttona" />

</RelativeLayout>