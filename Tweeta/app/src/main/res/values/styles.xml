<resources>

    <!-- Base application theme. -->

    <style name="Theme.Twitt4droid.WithToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="floatingActionButtonStyle">@style/Twitt4droid.Fab</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Theme.Twitt4droid.WithDefaultActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="floatingActionButtonStyle">@style/Twitt4droid.Fab</item>
    </style>

    <style name="Twitt4droid.Fab" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@color/fab_color</item>
    </style>

</resources>
